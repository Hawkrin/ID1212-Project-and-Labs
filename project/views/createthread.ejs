<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>

        <%- include('./partials/navbar.ejs') %>

        <form id="createPostContainer" method="POST">
            <label id="editTitleContainer">
                <textarea id="titleArea"
                    maxLength="30"
                    placeholder='Enter a Title..'
                    name="title"
                ></textarea>
            </label>
            <label id="editDescriptionContainer">
                <textarea id="descriptionArea"
                    placeholder='Write a brief description...'
                    maxLength="100"
                    name="description"
                ></textarea>
            </label>
            <label id="editBodyContainer">
                <textarea id="bodyArea"
                    placeholder='Write a post...'
                    name="body"
                ></textarea>
            </label>
            <div id="buttonPosition">
                <button id="createButton">Create</button>
                <button id="createButton">
                    <a id="buttonText" href="/posts/forumPage">Cancel</a>
                </button> 
            </div>
        </form>
    </body>
    <style>
        #createPostContainer {
            background:#a9b9c9;
            border-style: solid;
            border-color: #596d80;
            height: 700px;
            width: 800px;
            margin: auto;
            margin-top: 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        #editTitleContainer {
            padding-top: 0px;
            border-style: solid;
            border-top-color: #596d80;
            border-bottom-color: #596d80;
            border-left-width: 0px;
            border-right-width: 0px;
        }
        #titleArea {
            height: 50px;
            width: 794px;
            font-size: xx-large;
            text-align: center;
            resize: none;
        }
        #editDescriptionContainer {
            padding-top: 20px;
            border-style: solid;
            border-top-color: #596d80;
            border-bottom-color: #596d80;
            border-left-width: 0px;
            border-right-width: 0px;
        }
        #descriptionArea {
            height: 80px;
            width: 794px;
            font-size: larger;
            resize: none;
        }
        #editBodyContainer {
            padding-top: 20px;
            border-style: solid;
            border-top-color: #596d80;
            border-bottom-color: #596d80;
            border-left-width: 0px;
            border-right-width: 0px;
        }
        #bodyArea {
            height: 500px;
            width: 794px;
            font-size: larger;
            resize: none;
        }
        #buttonPosition {
            padding-top: 20px;
            text-align: center;
            display: flex;
            justify-content: space-between;
            gap: 400px;
        }
        #createButton {
            color: #3faeca;
            text-transform: uppercase;
            font-size: 2rem;
            letter-spacing: .15rem;
        }
        #createButton:hover {
            color: #268197;
            position:relative;
            z-index:5;
            opacity: 1.0;
            cursor: pointer;

        }   
        #buttonText {
            text-decoration: none;
            color: #3faeca;
        }
    </style>
</html>