<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>forumPage</title>
    </head>
    <body>

        <%- include('./partials/navbar.ejs') %>

        <div id="createPostButtonbox">
            <button id="createNewPost">
                <a id="createPostTitle" href="/posts/createPost">Create Post</a>
            </button>
        </div>
        <div id="postsBox">
            <% posts.map((post, i) => { %> 
                <a style="text-decoration: none; color:black;" href="/posts/post/<%=post._id%>">
                    <div key={i} id="posts" onclick="">
                        <div id="forumPagePostTitle">
                            <%= post.title %> 
                        </div>
                        <br>
                        <div id="forumPagePostDescription">
                            <%= post.description %>
                        </div>
                        <br>
                        <div id="dateBox">
                            <div>
                                <%= post.date.toString().split('G')[0].split('2023')[0] %>
                            </div>
                            <div>
                                <%= post.date.toString().split('G')[0].split('2023')[1] %>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>     
        </div>
    </body>
    <style>
        #createPostButtonBox {
            width: 1000px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #createNewPost {
            font-family: "Open Sans", sans-serif;
            font-size: 16px;
            letter-spacing: 2px;
            text-decoration: none;
            text-transform: uppercase;
            color: #000;
            cursor: pointer;
            border: 3px solid;
            padding: 0.25em 0.5em;
            box-shadow: 1px 1px 0px 0px, 2px 2px 0px 0px, 3px 3px 0px 0px, 4px 4px 0px 0px, 5px 5px 0px 0px;
            position: relative;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }
        #createNewPost:hover {
            box-shadow: 0px 0px 0px 0px;
            top: 5px;
            left: 5px;
        }
        #createPostTitle {
            text-decoration: none;
            color: black;
        }
        #postsBox {
            padding-top: 2em;
            background:#f0f1f3;
            border-top: solid;
            border-bottom: solid;
            border-color: #596d80;
            height: 700px;
            width: 1000px;
            margin: auto;
            margin-top: 50px;
            display: grid;
            grid-gap: 5rem;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            overflow: scroll;
        }
        #posts {
            height: 7em;
            width: 25em;
            margin-right: auto;
            margin-left: auto;
            border: double;
            border-color: #596d80;
        }
        #posts:hover {
            cursor: pointer;
        }
        #forumPagePostTitle {
            display: flex;
            justify-content: center;
            font-weight: bold;
        }
        #forumPagePostDescription {
            display: flex;
            text-overflow: ellipsis;
            width: 398px;
        }
        #dateBox {
            display: flex;
            justify-content: space-between;
            padding-left: 5px;
            padding-right: 5px;
        }
    </style>
</html>